<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>


<% @tasks.each do |task| %>
   <%= task.title %>
   <%= task.text %>
   <%= task.created_at %>
   <%= task.deadline %>
   <%= task.user_id %>
   <%= link_to "詳細", task_path(task.id) %>
   <%= link_to "削除", task_path(task.id), method: :delete %><br>
<% end %>

