<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>
<div class="container">
<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :detail %>
  <%= f.text_area :detail, class:"form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :deadline %>
    <%= f.date_select :deadline, class:"form-control" %>
  </div>
  <%= f.submit class:'btn btn-primary'%>
<% end %>
<%= link_to "戻る", tasks_path %>
</div>